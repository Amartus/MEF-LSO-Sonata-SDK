{
   "title":"UNISpec",
   "description":"Description of UNISpec for Serviceability",
   "Required":[
   ],
   "properties":{
      "portSpeed":{
         "description":"The speed of the UNI port",
         "$ref":"#/definitions/informationRate"
      },
      "accessTechnology":{
         "description":"The underlying technology used to transmit data across the Access Medium (e.g., DOCSIS 3.0). Attribute not expected in the request",
         "$ref":"#/definitions/accessTechnology"
      },
      "interfaceType":{
         "description":"The UNI Handoff interface type to connect to the end customer's network (e.g., Electrical)",
         "$ref":"#/definitions/interfaceType"
      },
      "accessMedium":{
         "description":"The type of media the service should be delivered over (e.g., Fiber, Coax, Twisted Pair)",
         "$ref":"#/definitions/accessMedium"
      },
      "physicalLayer":{
         "description":"The layer (layer 1) that provides transparent transmission of a bit stream over a circuit built from some physical communications medium. Attribute not expected in the request",
         "$ref":"#/definitions/physicalLayer"
      },
      "@_type":{
         "description":"",
         "type":"string"
      },
      "@_location":{
         "description":"",
         "type":"string"
      }
   },
   "definitions":{
      "physicalLayer":{
         "description":"",
         "type":"string",
         "enum":[
            "10BASE-T",
            "100BASE-TX",
            "100BASE-FX",
            "1000BASE-T",
            "1000BASE-SX",
            "1000BASE-LX",
            "10GBASE-SR",
            "10GBASE-SW",
            "10GBASE-LR",
            "10GBASE-LW",
            "10GBASE-ER",
            "10GBASE-EW"
         ]
      },
      "informationRateUnit":{
         "description":"",
         "type":"string",
         "enum":[
            "Mbps",
            "Gbps"
         ]
      },
      "interfaceType":{
         "description":"The UNI Handoff interface type to connect to the end customer's network (e.g., Electrical or Optical).",
         "type":"string",
         "enum":[
            "ELECTRICAL",
            "OPTICAL"
         ]
      },
      "accessTechnology":{
         "description":"The underlying technology used to transmit data across the Access Medium.",
         "type":"string",
         "enum":[
            "BONDED_COPPER",
            "DIRECT_FIBER",
            "DOCSIS_3.0",
            "DOCSIS_3.1",
            "DSL",
            "PACKET_MICROWAVE",
            "PON",
            "SONET_SDH",
            "TDM",
            "WDM"
         ]
      },
      "accessMedium":{
         "description":"",
         "type":"string",
         "enum":[
            "FIBER",
            "COAX",
            "TWISTED_PAIR"
         ]
      },
      "informationRate":{
         "description":"",
         "required":[
            "amount",
            "unit"
         ],
         "type":"object",
         "properties":{
            "amount":{
               "description":"",
               "type":"integer",
               "format":"int32"
            },
            "unit":{
               "description":"",
               "$ref":"#/definitions/informationRateUnit"
            }
         }
      }
   }
}
